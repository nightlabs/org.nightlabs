	<target name="compile.pre">
	    <mkdir dir="${project.dir}/${lib.dir}"/>

		<copy file="../NightLabsBase/dist/NightLabsBase.jar" todir="${project.dir}/${lib.dir}" failonerror="false" verbose="true"/>
		<jarlib-resolve property="NightLabsBase.library" failonerror="true" checkextension="false">
			<extension extensionname="NightLabsBase"/>
			<location location="${project.dir}/${lib.dir}/NightLabsBase.jar"/>
			<url
				url="http://ipanema.nightlabs.org/~nightly/NightLabs/NightLabsBase.jar"
				destdir="${project.dir}/${lib.dir}"/>
		</jarlib-resolve>

	</target>
</project>