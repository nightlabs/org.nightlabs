							<version>1.2.16</version>
						</dependency>
						<dependency>
							<groupId>org.nightlabs</groupId>
							<artifactId>org.nightlabs.datanucleusenhancer.log4jconfig</artifactId>
							<version>1.0.0</version>
						</dependency>
						<dependency>
							<groupId>org.datanucleus</groupId>
