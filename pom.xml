<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.nightlabs</groupId>
	<artifactId>org.nightlabs.base</artifactId>
	<packaging>bundle</packaging>
	<name>${project.artifactId}</name>

	<parent>
		<groupId>org.nightlabs</groupId>
		<artifactId>org.nightlabs.parent</artifactId>
		<version>1.3.1</version>
		<relativePath>../org.nightlabs.parent/pom.xml</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.config</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.concurrent</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.i18n</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.progress</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.util</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.xml</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<outputDirectory>bin</outputDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		
		<!-- FIXME the package name should be fixed (?). Collides with org.nightlabs.jdo -->
		<plugins>
			<!-- plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<archive>
						<manifestFile>META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin-->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<inherited>true</inherited>
				<configuration>
					<instructions>
						<Export-Package>
						org.nightlabs;version="${project.version}",
						org.nightlabs.annotation;version="${project.version}",
						org.nightlabs.datastructure;version="${project.version}",
						org.nightlabs.db;version="${project.version}",
						org.nightlabs.clone;version="${project.version}",
						org.nightlabs.environment;version="${project.version}",
						org.nightlabs.inheritance;version="${project.version}",
						org.nightlabs.io;version="${project.version}",
						org.nightlabs.io.pcx;version="${project.version}",
						org.nightlabs.j2ee;version="${project.version}",
						org.nightlabs.jdo;version="${project.version}",
						org.nightlabs.job;version="${project.version}",
						org.nightlabs.l10n;version="${project.version}",
						org.nightlabs.language;version="${project.version}",
						org.nightlabs.math;version="${project.version}",
						org.nightlabs.notification;version="${project.version}",
						org.nightlabs.print;version="${project.version}",
						org.nightlabs.print.page;version="${project.version}",
						org.nightlabs.script;version="${project.version}",
						org.nightlabs.timepattern;version="${project.version}",
						org.nightlabs.version;version="${project.version}",
						org.nightlabs.webapp;version="${project.version}"					
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
