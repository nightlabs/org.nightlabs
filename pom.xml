	<version>1.2.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<bundle.namespace>${project.artifactId}</bundle.namespace>
	</properties>

	<organization>
		<name>NightLabs Consulting GmbH</name>
		<url>http://www.nightlabs.de/</url>
	</organization>

	<scm>
		<connection>scm:svn:https://dev.nightlabs.org/svn/public/main/trunk/org.nightlabs.parent</connection>
		<developerConnection>scm:svn:https://dev.nightlabs.org/svn/public/main/trunk/org.nightlabs.parent</developerConnection>
		<url>https://https://dev.nightlabs.org/svn/public/main/trunk/org.nightlabs.parent</url>
