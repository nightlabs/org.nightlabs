<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.essiembre.eclipse</groupId>
	<artifactId>com.essiembre.eclipse.i18n.resourcebundle</artifactId>
	<packaging>bundle</packaging>

	<parent>
		<groupId>org.nightlabs</groupId>
		<artifactId>org.nightlabs.parent</artifactId>
		<version>1.3.1-SNAPSHOT</version>
		<relativePath>../org.nightlabs.parent/pom.xml</relativePath>
	</parent>
	
	<!-- 
	The project com.essiembre.eclipse.i18n.resourcebundle is an foreign and individual project and so it got no special parent.
	 -->
	
	<properties>
		<eclipse-ide.version>3.6.2</eclipse-ide.version>
		<eclipse-ide.group>org.eclipse.rcp-helios-SR2-linux-gtk-mvnzd</eclipse-ide.group>
	</properties>

	<dependencies>
		<!-- <dependency> <groupId>org.nightlabs.eclipse</groupId> <artifactId>org.nightlabs.eclipse.compatibility.rap</artifactId> 
			<version>${nightlabs.version}</version> <scope>provided</scope> </dependency> -->
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.ui</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.core.runtime</artifactId>
			<version>3.6.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.jface.text</artifactId>
			<version>3.6.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.core.resources</artifactId>
			<version>3.6.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.ui.editors</artifactId>
			<version>3.6.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.ui.ide</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.ui.workbench.texteditor</artifactId>
			<version>3.6.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.ui.workbench</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.jdt.ui</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.ui.views</artifactId>
			<version>3.5.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.jface</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.swt.gtk.linux.x86_64</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.swt</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.equinox.common</artifactId>
			<version>3.6.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.core.commands</artifactId>
			<version>3.6.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.core.contenttype</artifactId>
			<version>3.4.100</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.core.filebuffers</artifactId>
			<version>3.5.100</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.core.jobs</artifactId>
			<version>3.5.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.equinox.app</artifactId>
			<version>1.3.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.equinox.preferences</artifactId>
			<version>3.3.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.equinox.registry</artifactId>
			<version>3.5.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.osgi</artifactId>
			<version>3.6.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${eclipse-ide.group}</groupId>
			<artifactId>org.eclipse.text</artifactId>
			<version>3.5.0</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<outputDirectory>bin</outputDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
					<include>plugin*.properties</include>
					<include>LICENSE.txt</include>
					<include>schema/**/*</include>
					<include>icons/**/*</include>
					<include>lib/**/*</include>
					<include>splash.bmp</include>
				</includes>
			</resource>
		</resources>
		
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Export-Package>com.essiembre.eclipse.rbe.*</Export-Package>
						<Import-Package>
							!org.eclipse.core.runtime,
							!org.eclipse.ui,
							!org.eclipse.ui.part,
							!org.eclipse.jface.text,
							*;version="0.0.0"</Import-Package>
						<Require-Bundle>
							org.eclipse.core.runtime,
							org.eclipse.ui.ide,
							org.eclipse.ui,
							org.eclipse.equinox.common,
							org.eclipse.jface.text
						</Require-Bundle>
						<Bundle-Activator>com.essiembre.eclipse.rbe.RBEPlugin</Bundle-Activator>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-SymbolicName>${project.artifactId};singleton:=true</Bundle-SymbolicName>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
		
	</build>
</project>
