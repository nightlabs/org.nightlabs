<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.nightlabs.jdo"
   name="JDO Plugin"
   version="1.0.0"
   provider-name="NightLabs.com"
   class="org.nightlabs.jdo.JdoPlugin">
   <runtime>
      <library name="org.nightlabs.jdo.jar">
         <export name="org.nightlabs.jdo.*"/>
         <export name="org.nightlabs.jdo.search.*"/>
         <export name="org.nightlabs.base.notification.*"/>
      </library>
      <library name="lib/NightLabsJDO.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.nightlabs.base"/>
   </requires>

</plugin>
